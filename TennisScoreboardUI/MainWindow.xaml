<Window x:Class="TennisScoreboardUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TennisScoreboardUI"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="FirstPlayerName" Height="23" Margin="150,136,442,0" TextWrapping="Wrap" VerticalAlignment="Top" HorizontalContentAlignment="Center"/>
        <TextBox x:Name="SecondPlayerName" Height="23" Margin="442,136,150,0" TextWrapping="Wrap" VerticalAlignment="Top" HorizontalContentAlignment="Center"/>
        <Button x:Name="StartGameButton" Content="Start Game" Margin="346,291,346,0" VerticalAlignment="Top" Click="Button_Click"/>
        <DockPanel>
            <Frame x:Name="Frame" Content="" HorizontalAlignment="Left" Height="399" Margin="10,10,0,0" VerticalAlignment="Top" Width="772"/>
        </DockPanel>
        <TextBlock x:Name="FirstPlayerText" HorizontalAlignment="Left" Margin="150,115,0,0" TextWrapping="Wrap" Text="First Player" VerticalAlignment="Top" Width="200"/>
        <TextBlock x:Name="SecondPlayerText" HorizontalAlignment="Left" Margin="442,115,0,0" TextWrapping="Wrap" Text="Second Player" VerticalAlignment="Top" Width="200"/>
    </Grid>
</Window>
