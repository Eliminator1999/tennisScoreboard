        <Button x:Name="AddScoreSecondPlayer" Content="Add Point" HorizontalAlignment="Left" Margin="48,277,0,0" VerticalAlignment="Top" Width="75" Click="AddScore" Tag="secondPlayer" Height="44"/>
        <Grid x:Name="ScoreGrid">
            <TextBlock x:Name="FirstPlayerFirstSetScore" Tag="00" HorizontalAlignment="Left" Margin="407,60,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="106" Width="119" Text="0" FontWeight="Bold" FontSize="80" TextAlignment="Center"/>
