            <TextBlock x:Name="SecondPlayerFirstSetScore" Tag="10" HorizontalAlignment="Left" Margin="407,253,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="106" Width="119" Text="0" FontWeight="Bold" FontSize="80" TextAlignment="Center"/>
            <TextBlock x:Name="SecondPlayerSecondSetScore" Tag="11" HorizontalAlignment="Left" Margin="531,253,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="106" Width="119" Text="0" FontWeight="Bold" FontSize="80" TextAlignment="Center"/>
            <TextBlock x:Name="SecondPlayerThirdSetScore" Tag="12" HorizontalAlignment="Left" Margin="655,253,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="106" Width="119" Text="0" FontWeight="Bold" FontSize="80" TextAlignment="Center"/>
        </Grid>    
        <TextBlock HorizontalAlignment="Left" Margin="407,33,0,0" TextWrapping="Wrap" Text="          1" VerticalAlignment="Top" Width="119" Background="#FFE6F1F0" FontWeight="Bold" FontSize="20"/>
        <TextBlock HorizontalAlignment="Left" Margin="531,33,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="119" Background="#FFE6F1F0" FontWeight="Bold" FontSize="20" Text="          2"/>
        <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="          3" VerticalAlignment="Top" Width="119" Background="#FFE6F1F0" FontWeight="Bold" FontSize="20" Margin="655,33,0,0"/>

    </Grid>
</Page>
